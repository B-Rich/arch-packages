# Contributor: Daniel Mendler <mail@daniel-mendler.de>

pkgname=pacgem-git
pkgver=20110206
pkgrel=1
pkgdesc="Install Ruby Gems as Arch Linux packages"
arch=('any')
url="http://github.com/minad/pacgem"
license=('Ruby')
depends=('ruby')
makedepends=('git')
conflicts=('pacgem')

_gitroot="git://github.com/minad/pacgem.git"
_gitname="pacgem"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"

  install -D -m755 $_gitname/pacgem $pkgdir/usr/bin/pacgem
  gzip $_gitname/pacgem.8
  install -D -m644 $_gitname/pacgem.8.gz $pkgdir/usr/share/man/man8/pacgem.8.gz
}
